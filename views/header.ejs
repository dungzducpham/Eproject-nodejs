<div class="header">
    <div class="grid">
        <div class="moon"></div>
        <div class="logo">
            <a href="/" title="Astronomy Magazine">
                <img src="../images/logo.png" alt="Astronomy Magazine">
            </a>
        </div>
        <div class="header-user">
            <button class="js-login-ticket">Login</button> or
            <button class="js-register-ticket">Register</button>
        </div>
    </div>
</div>

<div class="modal">
   <div class="modal__overlay"></div>

   <div class="modal__body">

        <!-- Register form -->
       <div class="auth-form modal-register">
           <div class="auth-form__container">
               <div class="auth-form__header">
                   <h3 class="auth-form__heading">Đăng ký</h3>
               </div>

               <div class="auth-form__form">
                   <div class="auth-form__group">
                       <input type="number" class="auth-form__input" placeholder="Số điện thoại">
                   </div>
               </div>

               <div class="auth-form__controls">
                   <button class="btn btn--primary">TIẾP THEO</button>
               </div>

               <div class="auth-form__or">
                   <p>-----------------------------</p>
                   <p>HOẶC</p>
                   <p>-----------------------------</p>
               </div>

               <div class="auth-form__socials">
                   <a href="" class="btn btn--with-icon">
                       <i class="fab fa-facebook btn--with-icon-facebook"></i>
                       Facebook
                   </a>
                   <a href="" class="btn btn--with-icon">
                       <i class="fab fa-google btn--with-icon-google"></i>
                       Google
                   </a>
                   <a href="" class="btn btn--with-icon">
                       <i class="fab fa-apple btn--with-icon-apple"></i>
                       Apple
                   </a>
               </div>

               <div class="auth-form__aside">
                   <p class="auth-form__policy-text">
                       Bằng việc đăng kí, bạn đã đồng ý với Shopee về<br/>
                       <a href="" class="auth-form__text-link">Điều khoản dịch vụ</a>&
                       <a href="" class="auth-form__text-link">Chính sách bảo mật</a>
                   </p>
                   <p class="auth-form__policy-text auth-form__policy-span">
                       <span>Bạn đã có tài khoản?</span>
                       <a href="" class="auth-form__text-link">Đăng nhập</a>
                   </p>
               </div>
           </div>
       </div>

        <!-- Login form -->
       <div class="auth-form modal-login">
           <div class="auth-form__container">
               <div class="auth-form__header">
                   <h3 class="auth-form__heading">Đăng nhập</h3>
               </div>

               <div class="auth-form__form">
                   <div class="auth-form__group">
                       <input type="text" class="auth-form__input" placeholder="Email/Số điện thoại/Tên đăng nhập">
                   </div>
                   <div class="auth-form__group">
                       <input type="password" class="auth-form__input" placeholder="Mật khẩu">
                   </div>
               </div>

               <div class="auth-form__controls">
                   <button class="btn btn--primary">ĐĂNG NHẬP</button>
               </div>

               <div class="auth-form__help">
                   <a href="" class="auth-form__help-link">Quên mật khẩu</a>
                   <a href="" class="auth-form__help-link">Đăng nhập với SMS</a>
               </div>

               <div class="auth-form__or">
                   <span class="auth-form__or-separate"></span>
                   <p>HOẶC</p>
                   <span class="auth-form__or-separate"></span>
               </div>

               <div class="auth-form__socials">
                   <a href="" class="btn btn--with-icon">
                       <i class="fab fa-facebook btn--with-icon-facebook"></i>
                       Facebook
                   </a>
                   <a href="" class="btn btn--with-icon">
                       <i class="fab fa-google btn--with-icon-google"></i>
                       Google
                   </a>
                   <a href="" class="btn btn--with-icon">
                       <i class="fab fa-apple btn--with-icon-apple"></i>
                       Apple
                   </a>
               </div>

               <div class="auth-form__aside">
                   <p class="auth-form__policy-text auth-form__policy-span">
                       <span>Bạn mới biết đến shoppe?</span>
                       <a href="" class="auth-form__text-link">Đăng ký</a>
                   </p>
               </div>
           </div>
       </div>
   </div>
</div>